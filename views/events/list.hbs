
<main>
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 my-5">
  {{#each events}}
    <div class="col mb-3">
      <div class="card" style="width: 18rem;">
        <img src={{image}} class="card-img-top" alt={{title}}>

        <div class="card-body">
          <h5 class="card-title">{{title}}</h5>
          <p class="card-text">{{formatDate start}} to {{formatDate end}}</p>
          <a href="/events/{{_id}}">Information</a>
          <div>
            <a href="/events/{{_id}}/delete" class="btn btn-danger"><i class="bi bi-trash3">Delete</i></a>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
  </div>

  <a href="/create-event">Create Event </a>
</main>